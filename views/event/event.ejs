<% layout("/layout/boilerplate") %>

    <style>
        .events-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .event-item {
            display: flex;
            background: rgba(255, 167, 0, 0.05);
            border-radius: 15px;
            overflow: hidden;
            margin-bottom: 3rem;
            transition: transform 0.3s ease;
            border: 1px solid rgba(255, 167, 0, 0.1);
            backdrop-filter: blur(10px);
        }

        .event-image {
            flex: 0 0 40%;  /* Changed from fixed 400px to relative 40% */
            position: relative;
            overflow: hidden;
            min-height: 300px;  /* Added minimum height */
            background: rgba(0, 0, 0, 0.2);
        }

        .event-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            position: absolute;
            top: 0;
            left: 0;
            transition: transform 0.3s ease;
        }

        .event-details {
            /* padding: 2rem; */
            flex: 1;
        }

        .event-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(255, 167, 0, 0.1);
        }

        .event-item:hover .event-image img {
            transform: scale(1.05);
        }

        .category-title {
            color: #FFA700;
            font-size: 2rem;
            margin: 2rem 0;
            text-align: center;
        }

        .event-type {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .type-upcoming {
            background: rgba(255, 167, 0, 0.1);
            color: #FFA700;
        }

        .event-date {
            color: #FFA700;
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .event-title {
            color: #FFA700;
            font-size: 3rem;
            background: linear-gradient(45deg, #FFDD00, #FFAA00, #FF7800, #FF4500);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .event-description {
            color: #FFA700;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .event-info {
            display: flex;
            gap: 2rem;
            color: #FFA700;
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        @media (max-width: 768px) {
            .event-item {
                flex-direction: column;
            }

            .event-image {
                flex: 0 0 auto;
                aspect-ratio: 16/9;
                min-height: 250px;
            }

            .event-details {
                padding: 1.5rem;
            }

            .event-title {
                font-size: 2rem;
            }

            .events-container {
                padding: 1rem;
            }

            .event-item {
                margin-bottom: 2rem;
            }
        }

        .events-section {
            min-height: calc(100vh - 100px);
            padding-bottom: 5rem;
        }
    </style>

    <div class="events-section">
        <h1 class="event-title" style="text-align: center;">Club Events</h1>

        <div class="events-container">
            <!-- Upcoming Events -->
            <h2 class="category-title">Upcoming Events</h2>

            <a href="/upcomingEvent" style="text-decoration: none; color: inherit;">
                <div class="event-item">
                    <div class="event-image">
                        <img src="https://www.paperlesspost.com/blog/wp-content/uploads/071823_Blog_Prosumer_CollegeEventIdeas_01-hero.png"
                            alt="Hackathon 2024" class="placeholder-image">
                    </div>
                    <div class="event-details">
                        <div class="div" style="display: flex; ">
                            <span class="event-type type-upcoming">Upcoming</span>
                            <span class="event-type type-upcoming" style="margin-left:1rem;">Registration Live</span>
                        </div>
                        <div class="event-date">27 - 28 Feb</div>
                        <h3 class="event-title"><b>Science Fest 2025</b></h3>
                        <p class="event-description">Join us for an exciting celebration of Science & Technology. MIT
                            ADT University SciFest'25 brings back the role of science in shaping tomorrow, honouring the
                            legacy of great minds like Sir C.V. Raman . </p>
                        <div class="event-info">
                            <div class="info-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>Room N003, MIT ADT University</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-clock"></i>
                                <span>timing</span>
                            </div>
                        </div>
                    </div>
                </div>
            </a>

            <!-- Past Events -->
            <h2 class="category-title">Past Events</h2>

            <a href="/opening" style="text-decoration: none; color: inherit;">
                <div class="event-item">
                    <div class="event-image">
                        <img src="https://i.postimg.cc/8PX1rPc2/opening.png" alt="Opening Ceremony">
                    </div>
                    <div class="event-details">
                        <span class="event-type type-upcoming">Past</span>
                        <div class="event-date">Nov 26, 2024</div>
                        <h3 class="event-title"><b>Opening Ceremony</b></h3>
                        <p class="event-description">The ASTECH Festival is the flagship event to introduce the club to
                            first-year students, emphasizing that it is for the first year, by the first year.</p>
                        <div class="event-info">
                            <span class="info-item"><i class="fas fa-map-marker-alt"></i> Main Auditorium</span>
                            <span class="info-item"><i class="fas fa-clock"></i> 12:45PM - 4:00 PM</span>
                        </div>
                    </div>
                </div>
            </a>

            <a href="/sih" style="text-decoration: none; color: inherit;">
                <div class="event-item">
                    <div class="event-image">
                        <img src="https://i.postimg.cc/FFPgs2wk/astechgrp2.jpg" alt="SIH Hackathon">
                    </div>
                    <div class="event-details">
                        <span class="event-type type-upcoming">Past</span>
                        <div class="event-date">11/11/11</div>
                        <h3 class="event-title"><b>SIH Hackathon</b></h3>
                        <p class="event-description">The Hackathon Final at our college was a five-day tech event where
                            Astech Club volunteers ensured smooth operations and supported participants alongside ACES
                            and Crieya.</p>
                        <div class="event-info">
                            <span class="info-item"><i class="fas fa-map-marker-alt"></i>Library</span>
                            <span class="info-item"><i class="fas fa-clock"></i>24*5</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
