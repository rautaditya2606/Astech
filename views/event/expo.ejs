<% layout('layout/boilerplate') %>

    <style>
        .expo-container {
            background: linear-gradient(to right, #0F1E47, #000510);
            padding-top: 6rem; /* Increased padding-top to accommodate navbar */
            position: relative;
            z-index: 0;
            min-height: 100vh;
        }

        /* ...existing styles... */

        .main-title {
            font-size: 3rem;
            text-align: center;
            margin-bottom: 3rem;
            background: linear-gradient(45deg, #FFDD00, #FFAA00, #FF7800, #FF4500);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            -webkit-text-fill-color: transparent;
            text-transform: uppercase;
            letter-spacing: 3px;
            color: #fff;
            /* Fallback color */
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
            /* Add depth */
            position: relative;
            /* Ensure proper stacking */
            z-index: 1;
            /* Ensure visibility */
            padding: 1rem 0;
            /* Add some spacing */
        }

        /* Add specific hover effect */
        .main-title:hover {
            transform: scale(1.02);
            transition: transform 0.3s ease;
        }

        /* Improve visibility on mobile */
        @media (max-width: 768px) {
            .main-title {
                font-size: 2rem;
                padding: 0.5rem 0;
                margin-top: 3rem;
            }
        }

        .tech-tag {
            display: inline-block;
            background: rgba(255, 167, 0, 0.1);
            color: var(--accent-orange);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 1rem;
            /* Increased font size */
            backdrop-filter: blur(5px);
            border: 1px solid var(--accent-orange);
            font-weight: 500;
            /* Added font weight */
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
            /* Added text shadow */
        }

        .project-card h2,
        .product-card h2 {
            color: var(--accent-orange);
        }

        .project-card:hover,
        .product-card:hover {
            border-color: var(--accent-orange);
            box-shadow: 0 10px 30px rgba(255, 167, 0, 0.1);
        }

        .feature-list i {
            color: var(--accent-orange);
        }

        .register-text,
        .register-button {
            color: var(--accent-orange);
        }

        .register-button {
            border-color: var(--accent-orange);
            background: rgba(255, 167, 0, 0.1);
        }

        .register-button:hover {
            background: rgba(255, 167, 0, 0.2);
            box-shadow: 0 4px 12px rgba(255, 167, 0, 0.1);
        }

        .register-banner {
            width: 100%;
            padding: 1rem;
            position: fixed; /* Changed to fixed */
            top: 4rem; /* Position it below navbar */
            left: 0;
            z-index: 100; /* Higher z-index to stay above content but below navbar */

        }

        .register-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 1rem;
        }

        .project-card,
        .product-card {
            position: relative;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            height: 100%;
        }

        .project-card:hover,
        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .project-image,
        .product-header {
            position: relative;
            /* Ensure this is set */
            height: 250px;
            overflow: hidden;
        }

        .project-image img,
        .product-header img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .project-card:hover .project-image img,
        .product-card:hover .product-header img {
            transform: scale(1.05);
        }

        .projects-grid,
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .project-content,
        .product-body {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .project-stats {
            background: linear-gradient(45deg, #FFDD00, #FFAA00, #FF7800, #FF4500);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .stat {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .project-overlay {
            position: absolute;
            bottom: 0;
            /* Changed from top: 0 */
            left: 0;
            right: 0;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
            padding: 1.5rem;
            z-index: 1;
            /* Added z-index */
        }

        /* Added hover effect specifically for overlay */
        .project-card:hover .project-overlay {
            opacity: 1;
            transform: translateY(0);
        }

        @media (max-width: 768px) {

            .projects-grid,
            .products-grid {
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            }

            .project-image,
            .product-header {
                height: 200px;
            }

            .expo-container {
                padding-top: 7rem; /* Increased padding for mobile */
            }
            
            .register-banner {
                top: 3.5rem; /* Adjust for mobile navbar height */
            }
        }

        @media (max-width: 480px) {

            .project-content h2,
            .product-body h2 {
                font-size: 1.25rem;
            }
        }
    </style>

    <div class="register-banner">
        <div class="register-content">
            <span class="register-text">Book your spot at the Tech Expo!</span>
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSfaz34SJPCQf4CvZdxJC6Ol1Reqy30yipLQvf-XJjI2_s3hSg/viewform" class="register-button">
                <i class="fas fa-ticket-alt"></i>
