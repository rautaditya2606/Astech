<script>
    const hamburger = document.querySelector('.hamburger');
    const navLinks = document.querySelector('.nav-links');

    hamburger.addEventListener('click', () => {
        hamburger.classList.toggle('active');
        navLinks.classList.toggle('active');
    });

    // Close mobile menu when clicking on a link
    document.querySelectorAll('.nav-links a').forEach(link => {
        link.addEventListener('click', () => {
            hamburger.classList.remove('active');
            navLinks.classList.remove('active');
        });
    });

    // Close mobile menu when clicking outside
    document.addEventListener('click', (e) => {
        if (!e.target.closest('.nav-content')) {
            hamburger.classList.remove('active');
            navLinks.classList.remove('active');
        }
    });

    let slideIndex = 1;
    showSlides(slideIndex);

    function changeSlide(n) {
        showSlides(slideIndex += n);
    }

    function currentSlide(n) {
        showSlides(slideIndex = n);
    }

    function showSlides(n) {
        let slides = document.getElementsByClassName("slides");
        let dots = document.getElementsByClassName("dot");

        if (n > slides.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = slides.length }

        for (let i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (let i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }

        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";
    }

    // Auto-advance slides every 5 seconds
    setInterval(() => {
        changeSlide(1);
    }, 5000);

    // Initialize animation after content is loaded
    setTimeout(() => {
        const logo = document.querySelector('.logo-container');
        const content = document.querySelector('.content-container');
        const letter = document.querySelector('.letter-overlay');
        const scrollIndicator = document.querySelector('.scroll-indicator');
        const maxLogoScale = 3;
        const maxLetterScale = 5;

        if (logo && content && letter && scrollIndicator) {
            window.addEventListener('scroll', () => {
                const scrollPercent = window.scrollY / (window.innerHeight * 0.5); // Reduced scroll range

                // Hide scroll indicator on scroll
                if (scrollPercent > 0.1) {
                    scrollIndicator.style.opacity = '0';
                } else {
                    scrollIndicator.style.opacity = '1';
                }

                // First phase: Logo scaling and initial content reveal (0-50% scroll)
                if (scrollPercent <= 0.5) {
                    const scale = 1 + Math.min(scrollPercent, maxLogoScale - 1);
                    const contentOpacity = Math.min(scrollPercent * 2, 1);

                    logo.style.transform = `scale(${scale})`;
                    logo.style.opacity = Math.max(1 - scrollPercent, 0);

                    content.style.opacity = contentOpacity;
                    content.style.transform = `translateY(${50 - (scrollPercent * 100)}px)`;

                    letter.style.opacity = '0';
                }
                // Second phase: Keep content visible and scale letters
                else {
                    logo.style.opacity = '0';
                    content.style.opacity = '1';
                    content.style.transform = 'translateY(0)';

                    const letterProgress = Math.min((scrollPercent - 0.5) * 2, 1);
                    letter.style.opacity = letterProgress * 0.1; // Keep letters subtle
                    letter.style.transform = `scale(${1 + (letterProgress * maxLetterScale)})`;
                }
            });
        }
    }, 100);

    // Add this new scroll handler
    window.addEventListener('scroll', () => {
        const heroContent = document.querySelector('.hero-content');
        const heroTitle = document.querySelector('.hero-title');
        const heroSubtitle = document.querySelector('.hero-subtitle');
        const scrolled = window.scrollY;
        const viewportHeight = window.innerHeight;

        // Calculate scroll progress (0 to 1) with shorter distance
        const progress = Math.min(scrolled / (viewportHeight * 0.5), 1); // Changed from viewportHeight to viewportHeight * 0.5

        // Calculate zoom effect (1 to 4 instead of 1 to 8)
        const scale = 1 + (progress * 3); // Reduced scale multiplier

        // Calculate z-translation for depth (-500px to 250px instead of -1000px to 500px)
        const zTranslate = -500 + (progress * 750); // Reduced translation distance

        // Calculate opacity (1 to 0)
        const opacity = Math.max(1 - (progress * 2), 0);

        // Apply transformations
        heroTitle.style.transform = `translateZ(${zTranslate}px) scale(${scale})`;
        heroContent.style.opacity = opacity;
        heroSubtitle.style.opacity = opacity;

        // Add motion blur as speed increases
        const blur = Math.min(progress * 5, 5); // Reduced blur effect
        heroContent.style.filter = `blur(${blur}px)`;

        // Disable content when fully zoomed
        if (progress >= 0.8) {
            heroContent.style.pointerEvents = 'none';
        } else {
            heroContent.style.pointerEvents = 'all';
        }
    });

    // Add touch swipe functionality
    let touchStartX = 0;
    let touchEndX = 0;
    
    const slideshowContainer = document.querySelector('.slideshow-container');
    
    slideshowContainer.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
    });
    
    slideshowContainer.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
    });
    
    function handleSwipe() {
        const swipeThreshold = 50; // minimum distance for a swipe
        const difference = touchEndX - touchStartX;
        
        if (Math.abs(difference) > swipeThreshold) {
            if (difference > 0) {
                // Swiped right
                changeSlide(-1);
            } else {
                // Swiped left
                changeSlide(1);
            }
        }
    }
</script>

