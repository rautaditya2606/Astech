    <style>
        .gallery-img {
            width: 100%;
            height: auto;
            max-height: 600px;
            overflow: hidden;
            margin-bottom: 2rem;
            position: relative;
            aspect-ratio: 16/9;
        }

        .gallery-img:hover {
            transform: scale(1.05);
        }

        .hero-section {
            padding: 8rem 2rem;
            position: relative;
            overflow: hidden;
            background-attachment: fixed;
            background-image: url('https://images.unsplash.com/photo-1486291301608-a503c774721a?q=80&w=2005&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
            background-size: cover;
            background-position: center;
            border-radius: 20px;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 1;
            background: rgba(0, 0, 0, 0.6);
        }

        .hero-container {
            position: relative;
            z-index: 2;
            text-align: center;
            max-width: 1000px;
            margin: 0 auto;
        }

        .hero-container h1 {
            font-size: 4.5rem;
            margin-bottom: 1.5rem;
            background: linear-gradient(45deg, #FFA700, #FFB700, #FFDD00);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .club-info {
            margin-top: 2rem;
            color: #FFA700;
            font-size: 1.2rem;
        }

        .main-aim-container {
            padding: 4rem 2rem;
        }

        .section-title {
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 3rem;
            background: linear-gradient(45deg, #FFA700, #FFB700, #FFDD00);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .content-card {
            background: rgba(255, 167, 0, 0.05);
            border: 1px solid rgba(255, 167, 0, 0.1);
            border-radius: 15px;
            padding: 2rem;
            margin: 2rem auto;
            max-width: 800px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .content-card p {
            color: #FFA700;
            line-height: 1.8;
            font-size: 1.1rem;
        }

        .objectives-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin: 3rem auto;
            max-width: 1200px;
        }

        .objective-card {
            background: rgba(255, 167, 0, 0.05);
            border: 1px solid rgba(255, 167, 0, 0.1);
            border-radius: 15px;
            padding: 2rem;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .objective-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(255, 167, 0, 0.1);
        }

        .objective-card i {
            font-size: 2.5rem;
            color: #FFA700;
            margin-bottom: 1rem;
        }

        .objective-card h3 {
            color: #FFA700;
            margin-bottom: 1rem;
            font-size: 1.3rem;
        }

        .objective-card p {
            color: #FFA700;
            font-size: 1rem;
            line-height: 1.6;
        }

        .stats-section {
            background: rgba(255, 167, 0, 0.05);
            padding: 4rem 0;
        }

        .stat-card {
            padding: 2rem;
            border-radius: 10px;
            background: rgba(255, 167, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .counter {
            font-size: 2.5rem;
            font-weight: bold;
            color: #FFA700;
            margin-bottom: 1rem;
        }

        .stat-card h4 {
            color: #FFA700;
            font-size: 1.2rem;
        }

        .team-card {
            background: rgba(255, 167, 0, 0.05);
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .team-card:hover {
            transform: translateY(-10px);
        }

        .team-img img {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

        .team-info {
            padding: 1.5rem;
            text-align: center;
        }

        .team-info h4 {
            color: #FFA700;
            margin-bottom: 0.5rem;
        }

        .team-info p {
            color: #FFA700;
            opacity: 0.8;
        }

        /* Animations */
        .animate-fade-down {
            opacity: 0;
            transform: translateY(-30px);
            animation: fadeDown 1s ease forwards;
        }

        .animate-fade-up {
            opacity: 0;
            transform: translateY(30px);
            animation: fadeUp 1s ease 0.3s forwards;
        }

        .animate-fade {
            opacity: 0;
            animation: fade 1s ease 0.6s forwards;
        }

        @keyframes fadeDown {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fade {
            to {
                opacity: 1;
            }
        }

        @media (max-width: 768px) {
            .hero-container h1 {
                font-size: 3rem;
            }

            .objectives-grid {
                grid-template-columns: 1fr;
            }

            .content-card {
                padding: 1.5rem;
            }
        }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <script>
        // Counter animation
        const counters = document.querySelectorAll('.counter');
        counters.forEach(counter => {
            const target = parseInt(counter.getAttribute('data-target'));
            const duration = 2000; // 2 seconds
            const step = target / (duration / 16); // 60fps

            function updateCounter() {
                const current = parseInt(counter.innerText);
                if (current < target) {
                    counter.innerText = Math.ceil(current + step);
                    setTimeout(updateCounter, 16);
                } else {
                    counter.innerText = target;
                }
            }

            updateCounter();
        });
    </script>
