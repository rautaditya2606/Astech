<% layout('layout/boilerplate') %>

    <style>
        .patent-container {
            margin-bottom: 5rem;
            padding-bottom: 5rem;
        }

        .patent-hero {
            background: linear-gradient(45deg, #FFDD00, #FFAA00, #FF7800, #FF4500);
            padding: 4rem 0;
            margin-bottom: 3rem;
            border-radius: 0 0 50% 50%/0 0 100px 100px;
        }

        .service-box {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            border-radius: 15px;
        }

        .service-box:hover {
            transform: translateY(-5px);
        }

        .benefit-card {
            padding: 1.5rem;
            border-radius: 10px;
            margin-bottom: 1rem;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }

        .benefit-card:hover {
            transform: scale(1.02);
        }

        .feature-icon {
            font-size: 2rem;
            color: #FF7800;
            margin-bottom: 1rem;
        }

        .cta-button {
            background-color: #1a1a1a;
            color: white;
            width: 60px;
            height: 60px;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            border-radius: 50%;
            font-size: 1.5rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            border: 2px solid transparent;
        }

        .cta-button:hover {
            color: white;
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            border-color: #FF7800;
        }

        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, #FFDD00, #FFAA00, #FF7800, #FF4500);
            opacity: 0;
            transition: opacity 0.3s ease;
            z-index: 1;
        }

        .cta-button:hover::before {
            opacity: 1;
        }

        .cta-button i {
            position: relative;
            z-index: 2;
            transition: transform 0.3s ease;
        }

        .cta-button:hover i {
            transform: rotate(360deg);
        }

        .social-links-container {
            padding: 2rem;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            margin-top: 2rem;
        }

        .modal-content {
            border-radius: 15px;
        }

        .contact-info .benefit-card {
            margin-bottom: 1.5rem;
        }

        .contact-info .benefit-card:last-child {
            margin-bottom: 0;
        }

        @media (max-width: 768px) {
            .patent-hero {
                padding: 3rem 0;
                margin-bottom: 2rem;
                border-radius: 0 0 30% 30%/0 0 50px 50px;
            }
        }

        .row.mt-5:last-child .col-12.text-center {
            background: rgba(0, 0, 0, 0.02);
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .social-title {
            background: linear-gradient(45deg, #FFDD00, #FFAA00, #FF7800, #FF4500);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
            margin-bottom: 1.5rem;
        }
    </style>

    <div class="patent-container">
